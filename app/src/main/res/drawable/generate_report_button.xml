<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Solid background color -->
    <solid android:color="#982325" /> <!-- Set background color to #982325 -->

    <!-- Adding padding around the text -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Round corners -->
    <corners android:radius="12dp" />

    <!-- Black border around the button -->
    <stroke
        android:color="#000000"
        android:width="2dp" />
</shape>